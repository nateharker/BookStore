<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - BookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="icon" href="~/img/book.ico" />
</head>
<body>
    <header>
        @*Navigations bar - hides the navigation links when the window is smaller*@
        <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/book.png" height="30" class="d-inline-block align-top" alt="">
                BookStore
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Purchase">Shopping Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
            <div class="text-right">@*View component for the cart summary code*@
                <vc:cart-summary/>
            </div>
            @*This portion of the navbar is only displayed when the browser is smaller, or on a mobile device, you can use the button to toggle the navigation links*@
            <div class="pos-f-t">
                <div class="collapse" id="navbarToggleExternalContent">
                    <div class="bg-dark p-2">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link text-muted" asp-page="/Purchase">Shopping Cart</a>
                        <a class="nav-link text-muted" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
                <nav class="navbar navbar-dark bg-dark">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </nav>
            </div>
        </nav>
        @*This is where the banner is created using the masthead class*@
        <div class="masthead">
            <div class="h-100 container">
                <div class="row h-100 align-items-center">
                    <div class="col-12 text-center">
                        <h1 class="text-white">@ViewBag.Header</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
   
    <div class="row m-1 p-1">
        <div class="col-2 text-center">
            <vc:navigation-menu /> @*This is where the View Component partial view will be inserted*@
        </div>
        <div class="container col-10">
            <main role="main" class="pb-3">
                @RenderBody()        @*This is where the body will be inserted*@
            </main>
        </div>
    </div>
    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2021 - BookStore - Nathan Harker
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
