@{
    ViewBag.Title = "Home";
    ViewBag.Header = "Welcome to the World's Premier Online Book Store";
}

@model IQueryable<Book>

<table class="table table-striped table-bordered table-hover"> @*Table with bootstrap styling to display the database contents*@
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>ISBN</th>
            <th>Classification</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model) @*Iterates through data in database and displays it in the table*@
        {
        <tr>
            <td>@b.Title</td>
            <td>@b.AuthorLName, @b.AuthorFName @b.AuthorMName</td>
            <td>@b.Publisher</td>
            <td>@b.ISBN</td>
            <td>@b.Classification</td>
            <td>@b.Category</td>
            <td>$@b.Price</td>
        </tr>
        }
    </tbody>
</table>

